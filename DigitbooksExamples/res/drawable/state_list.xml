<selector
	xmlns:android="http://schemas.android.com/apk/res/android">

	<!--Normal state -->
	<item
		android:state_pressed="false"
		android:state_focused="false">
		<shape
			android:shape="rectangle">

			<gradient
				android:startColor="#fe1111"
				android:endColor="#bb2233"
				android:angle="90"
				android:padding="10dp" />

			<corners
				android:radius="6dp" />

			<stroke
				android:color="#00ff00"
				android:width="2px" />

		</shape>
	</item>

	<!--Pressed state -->
	<item
		android:state_pressed="true">
		<shape
			android:shape="rectangle">

			<gradient
				android:startColor="#1111fe"
				android:endColor="#2222bb"
				android:angle="90"
				android:padding="10dp" />

			<corners
				android:radius="6dp" />

			<stroke
				android:color="#ff0000"
				android:width="2px" />

		</shape>
	</item>

	<!--Focused state -->
	<item
		android:state_focused="true">
		<shape
			android:shape="rectangle">

			<gradient
				android:startColor="#11fe11"
				android:endColor="#22bb22"
				android:angle="90"
				android:padding="10dp" />

			<corners
				android:radius="6dp" />

			<stroke
				android:color="#0000ff"
				android:width="2px" />

		</shape>
	</item>

</selector>